---
import GitHud from "@/icons/GitHud.astro";
import ChevRonLeft from "@/icons/ChevRonLeft.astro";
---

<div
  class="relative z-10 py-4 px-6 flex justify-between"
  transition:name="page header"
  transition:persist
>
  <a
    href="/"
    aria-label="Pagina anterior"
    class="bg-zinc-900 rounded-full inline-flex justify-center items-center h-8 w-8"
  >
    <ChevRonLeft class="h-4 w-4 -ml-0.5" />
  </a>
  <div class="flex items-center gap-3">
    <a
      target="_blank"
      aria-label={"github repository"}
      href="https://github.com/luucaasrulo/Clon-Spotify"
      class="text-gray-200 hover:text-white"
    >
      <GitHud class="h-7 w-7" />
    </a>
  </div>
</div>